#include <bits/stdc++.h>
#include <map>
#include <algorithm>
#include <vector>
#include <map>
#include <string>
using namespace std;
int main() {
    int count=0;
    string c;
    getline(cin,c);

    for (int i=0; i < c.length(); i++) {
        if (c[i] == '4' || c[i] == '7') {
            count++;
        }
    }

    if (count == 4 || count == 7) {
        cout << "YES" << endl;
    } else {
        cout << "NO" << endl;
    }

    return 0;
}
